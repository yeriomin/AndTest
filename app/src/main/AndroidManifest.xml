<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.yeriomin.andtest">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name=".activity.AvailableTestsActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TestAttemptsActivity" android:launchMode="singleTask"></activity>
        <activity android:name=".activity.QuestionListActivity" android:launchMode="singleTask"></activity>
        <activity android:name=".activity.QuestionActivity" android:launchMode="singleTask"></activity>
    </application>

</manifest>
